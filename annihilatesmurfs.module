  $form['annihilatesmurfs_live_preview'] = array(
    '#value' => '<div id="annihilatesmurfs-live-preview"><h3>Preview</h3><div style="border:1px solid #ccc; padding:5px; margin:5px 0;"><strong>Your search yielded no results</strong><ul><li>Check if your spelling is correct.</li><li>Remove quotes around phrases to match each word individually: <em>&ldquo;<span class="term1">'. variable_get('annihilatesmurfs_term1', ANNIHILATE_TERM_1) .'</span> <span class="term2">'. variable_get('annihilatesmurfs_term2', ANNIHILATE_TERM_2) .'</span>&rdquo;</em> will match less than <em><span class="term1">'. variable_get('annihilatesmurfs_term1', ANNIHILATE_TERM_1) .'</span> <span class="term2">'. variable_get('annihilatesmurfs_term2', ANNIHILATE_TERM_2) .'</span></em>.</li><li>Consider loosening your query with <em>OR</em>: <em><span class="term1">'. variable_get('annihilatesmurfs_term1', ANNIHILATE_TERM_1) .'</span> <span class="term2">'. variable_get('annihilatesmurfs_term2', ANNIHILATE_TERM_2) .'</span></em> will match less than <em><span class="term1">'. variable_get('annihilatesmurfs_term1', ANNIHILATE_TERM_1) .'</span> OR <span class="term2">'. variable_get('annihilatesmurfs_term2', ANNIHILATE_TERM_2) .'</span></em>.</li></ul></div></div>',
  );

  // include live preview script to show HTML as you type it
  drupal_add_js(drupal_get_path('module', 'annihilatesmurfs') .'/annihilatesmurfs.js', $type = 'module', $scope = 'footer');

  return system_settings_form($form);
} // function annihilatesmurfs_admin


/**
 * Implementation of hook_menu().
 * Add link to settings page
 */
function annihilatesmurfs_menu() {

  $items = array();

  $items['admin/settings/annihilatesmurfs'] = array(
    'title' => 'Annihilate smurfs',
    'description' => 'Replace the "blue smurf" text with whatever you like',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('annihilatesmurfs_admin'),
    'access arguments' => array('administer annihilatesmurfs'),
    'type' => MENU_NORMAL_ITEM,
  );

  return $items;
} // function annihilatesmurfs_menu


/**
 * Validate user input.
 */
function annihilatesmurfs_admin_validate($form, &$form_state) {
  // trim spaces
  $form_state['values']['annihilatesmurfs_term1'] = trim($form_state['values']['annihilatesmurfs_term1']);
  $form_state['values']['annihilatesmurfs_term2'] = trim($form_state['values']['annihilatesmurfs_term2']);
} // function annihilatesmurfs_admin_validate

