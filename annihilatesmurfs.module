  $form['annihilatesmurfs_intro'] = array(
    '#value' => t('Replace the "'. ANNIHILATE_TERM_1 .' '. ANNIHILATE_TERM_2 .'" text with whatever you like.<br />'. l('Get help on the Annihilate smurfs module here', 'admin/help/annihilatesmurfs')),
    // TODO - allow user to leave fields blank
    //<br />Leave the fields blank to use the default text ("blue smurf").
  );
  $form['annihilatesmurfs_term1'] = array(
    '#type' => 'textfield',
    '#title' => t('First term'),
    '#default_value' => variable_get('annihilatesmurfs_term1', ANNIHILATE_TERM_1),
    '#size' => 20,
    '#maxlength' => 50,
    '#description' => t('The first example search term (default value: "'. ANNIHILATE_TERM_1 .'").'),
    '#required' => FALSE,
  );
  $form['annihilatesmurfs_term2'] = array(
    '#type' => 'textfield',
    '#title' => t('Second term'),
    '#default_value' => variable_get('annihilatesmurfs_term2', ANNIHILATE_TERM_2),
